{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "$lib": ["./src"],
      "$lib/*": ["./src/*"],
      "lib": ["./demo/lib"],
      "lib/*": ["./demo/lib/*"],
      "svelte-highlight": ["./src"],
      "svelte-highlight/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "demo/**/*", "tests/**/*"]
}
